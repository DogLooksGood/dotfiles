menu-0-2 = Pulseaudio
menu-0-2-exec = pavucontrol
menu-0-3 = Lock
menu-0-3-exec = i3lock -i ~/Pictures/backgrounds/lock.png &

menu-1-0 = Manager
menu-1-0-exec = blueman-manager
menu-1-1 = Browse
menu-1-1-exec = blueman-browse

label-open = "  "
label-close = Close

; Optional item separator
; Default: none
label-separator = " | "



