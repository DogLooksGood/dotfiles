format-disconnected = <label-disconnected>

format-packetloss = <animation-packetloss> <label-connected>

label-connected = "%essid% %downspeed:8% %upspeed:8%   %local_ip%"
label-connected-foreground = ${color.fg}

label-disconnected = 睊 "Not Connected"
label-disconnected-foreground = #66ffffff

label-packetloss = %essid%
label-packetloss-foreground = #eefafafa

ramp-signal-0 = 直
ramp-signal-1 = 直
ramp-signal-2 = 直
ramp-signal-3 = 直
ramp-signal-4 = 直



[module/mpd]
type = internal/mpd

; Available tags:
;   <label-song> (default)
;   <label-time>
;   <bar-progress>
;   <toggle> - gets replaced with <icon-(pause|play)>
;   <toggle-stop> - gets replaced with <icon-(stop|play)>
;   <icon-random>
;   <icon-repeat>
;   <icon-repeatone> (deprecated)
;   <icon-single> - Toggle playing only a single song. Replaces <icon-repeatone>
;   <icon-consume>
;   <icon-prev>
;   <icon-stop>
;   <icon-play>
;   <icon-pause>
;   <icon-next>
;   <icon-seekb>
;   <icon-seekf>
format-online = <label-time> <icon-prev> <icon-pause> <icon-play> <icon-next> <label-song>

format-offline = <label-offline>

label-song = ﱘ %title%

label-time = %elapsed% / %total%

icon-pause = 懶

icon-prev = 玲

icon-next = 怜

icon-play = 契

icon-single = ﯩ

label-offline = mpd is offline



[module/launcher]
type = custom/text
content = 

; "content" has the same properties as "format-NAME"
;; content-background = ${color.ac}
;; content-foreground = ${color.mf}
content-padding = 1

click-left = rofi -show combi
click-right = rofi -show combi



[module/lock]

type = custom/text
content =

; "content" has the same properties as "format-NAME"
;; content-background = ${color.ac}
;; content-foreground = ${color.mf}
content-padding = 1

click-left = i3lock -i ~/Pictures/backgrounds/lock.png &
click-right = i3lock -i ~/Pictures/backgrounds/lock.png &




[module/menu]
type = custom/menu
expand-right = true

menu-0-0 = Bluetooth
