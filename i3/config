bindsym $mod+$alt+$nk2 move container to workspace 2
bindsym $mod+$alt+$nk3 move container to workspace 3
bindsym $mod+$alt+$nk4 move container to workspace 4
bindsym $mod+$alt+$nk5 move container to workspace 5
