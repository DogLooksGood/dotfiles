# reload the configuration file
# bindsym $mod+Shift+c reload
# restart i3 inplace (preserves your layout/session, can be used to upgrade i3)
bindsym $mod+Shift+r restart
# exit i3 (logs you out of your X session)
bindsym $mod+Shift+q exec "i3-nagbar -t warning -m 'You pressed the exit shortcut. Do you really want to exit i3? This will end your X session.' -B 'Yes, exit i3' 'i3-msg exit'"

# resize window (you can also use the mouse for that)
mode "resize" {
        # These bindings trigger as soon as you enter the resize mode

        bindsym minus resize shrink width 2 px or 2 ppt
        bindsym plus resize grow width 2 px or 2 ppt
        bindsym Shift+minus resize shrink height 2 px or 2 ppt
        bindsym Shift+plus resize grow height 2 px or 2 ppt

        # same bindings, but for the arrow keys
        bindsym Left resize shrink width 2 px or 2 ppt
        bindsym Down resize grow height 2 px or 2 ppt
        bindsym Up resize shrink height 2 px or 2 ppt
        bindsym Right resize grow width 2 px or 2 ppt

        # back to normal: Enter or Escape or $mod+r
        bindsym Return mode "default"
        bindsym Escape mode "default"
        bindsym $mod+r mode "default"
}

bindsym $mod+r mode "resize"

# software keybindings

bindsym $mod+k exec copyq menu

bindsym $mod+x exec arandr

bindsym $mod+w sticky toggle

# In case the wrong operate disable the primary display
#   We bind a shortcut to enable the primary display, eDP1

bindsym $mod+Shift+x exec xrandr --output eDP1 --auto
bindsym $mod+Shift+k exec xmodmap ~/.Xmodmap
bindsym $mod+apostrophe exec maim -s | xclip -selection clipboard -t image/png
bindsym $mod+Shift+apostrophe exec maim -s ~/Pictures/screenshots/$(date +%s).png

# Color Settings

# green "#16a085"

set_from_resource $active i3wm.highlight "#000000"
set_from_resource $inactive i3wm.inactive "#000000"
set_from_resource $activetext i3wm.highlight.text "#000000"
set $default "#ffffff"
set $indicator "#3399ff"

client.focused          $active   $active   $activetext $active
client.focused_inactive $inactive $inactive $default $inactive
client.unfocused        $inactive $inactive $default $indicator

# Assignment
assign [class="^firefox$"] 3

# Gaps setup
for_window [class=".*"] border pixel 1
gaps inner 8
smart_borders on
smart_gaps on

bindsym $mod+s			gaps inner current plus 5
bindsym $mod+Shift+s	gaps inner current minus 5
bindsym $mod+z			gaps outer current plus 5
bindsym $mod+Shift+z	gaps outer current minus 5

for_window [class=".*"] title_format "│%title"

# LS command is a pain on dvorak layout.
# bind a command to solve it.
bindsym --release $mod+d exec "sleep 0.1;xdotool type 'ls -lha';xdotool key Return"

