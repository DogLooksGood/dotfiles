#! /bin/sh

pkill sxhkd
sxhkd -m -1 &

bspc monitor -d 0 1 2 3 4 5

bspc config border_width         3
bspc config border_radius        10
bspc config window_gap           0

bspc config split_ratio          0.618
bspc config borderless_monocle   true
bspc config gapless_monocle      true

bspc config active_border_color "#9256B4"
bspc config focused_border_color "#9256B4"
bspc config normal_border_color "#131313"
bspc config automatic_scheme longest_side

bspc rule -a Screenkey manage=off
bspc rule -a Emacs state=tiled

fcitx5 &

pkill flameshot; flameshot &

nm-applet &

xfce4-power-manager &

fix_xcursor &

pkill volumeicon; volumeicon &

nitrogen --restore

xset r rate 180 30

if [ -f ~/.Xmodmap ]; then
    xmodmap ~/.Xmodmap
fi

pkill polybar; polybar -c ~/.config/polybar/config main
