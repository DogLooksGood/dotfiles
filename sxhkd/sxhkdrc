# -*- mode: conf -*-

#
# wm independent hotkeys
#

# terminal emulator
super + Return
	urxvt

# emacs
super + shift + Return
    emacs

# program launcher
super + d
	rofi -show combi

# make sxhkd reload its configuration files:
super + r
	pkill -USR1 -x sxhkd

# XRandr
super + shift + x
	xrandr --output eDP1 --auto

# Backlight
XF86MonBrightnessUp
    light -A 5

XF86MonBrightnessDown
    light -U 5

# Volume
XF86AudioRaiseVolume
	pactl set-sink-volume 0 +5%

XF86AudioLowerVolume
	pactl set-sink-volume 0 -5%

XF86AudioMute
	pactl set-sink-mute 0 toggle

#
# bspwm hotkeys
#

# quit/restart bspwm
super + alt + {q,r}
	bspc {quit,wm -r}

super + shift + r
    xset r rate 180 30

# close and kill
super + {_,shift + }q
	bspc node -{c,k}

super + y
	bspc node @parent -R 90

# swap the current node and the biggest node
super + g
	bspc node -s biggest.local

#
# state/flags
#

# set the window state
super + {a,shift + a,@space,f}
	bspc node -t {tiled,pseudo_tiled,floating,fullscreen}

# set the node flags
super + ctrl + {m,x,y,z}
	bspc node -g {marked,locked,sticky,private}

#
# focus/swap
#

# focus the node in the given direction
super + {_,shift + }{h, t, c, n}
	bspc node -{f,s} {west,south,north,east}

# focus the node for the given path jump
super + {p,b,comma,period}
	bspc node -f @{parent,brother,first,second}

# focus the next/previous node in the current desktop
super + {_,shift + }Tab
    bspc node -f {next,prev}.local.!hidden.window

# focus or send to the given desktop
{alt,super} + {_,shift + }F1
    bspc {desktop -f,node -d} 0
{alt,super} + {_,shift + }F2
    bspc {desktop -f,node -d} 1
{alt,super} + {_,shift + }F3
    bspc {desktop -f,node -d} 2
{alt,super} + {_,shift + }F4
    bspc {desktop -f,node -d} 3
{alt,super} + {_,shift + }F5
    bspc {desktop -f,node -d} 4
{alt,super} + {_,shift + }F6
    bspc {desktop -f,node -d} 5
{alt,super} + {_,shift + }F7
    bspc {desktop -f,node -d} 6
{alt,super} + {_,shift + }F8
    bspc {desktop -f,node -d} 7
{alt,super} + {_,shift + }F9
    bspc {desktop -f,node -d} 8
{alt,super} + {_,shift + }F0
    bspc {desktop -f,node -d} 9

#
# move/resize
#

# expand a window by moving one of its side outward
super + alt + {h, t, c, n}
	bspc node -z {left -120 0,bottom 0 120,top 0 -120,right 120 0}

# contract a window by moving one of its side inward
super + alt + shift + {h, t, c, n}
	bspc node -z {right -120 0,top 0 120,bottom 0 -120,left 120 0}

# move a floating window
super + {Left,Down,Up,Right}
	bspc node -v {-120 0,0 120,0 -120,120 0}


# screenshot
super + Print
    maim -u -s | xclip -selection clipboard -t image/png

super + o
    find-cursor
