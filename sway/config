exec --no-startup-id fcitx5 -d
exec --no-startup-id mako &
exec --no-startup-id waybar &

input type:keyboard {
    xkb_layout "us"
    xkb_variant "dvp"
    xkb_options "ctrl:swapcaps"
}

input type:mouse {
    accel_profile "adaptive"
    pointer_accel "1.0"
}

input type:keyboard repeat_delay 180
input type:keyboard repeat_rate 40
